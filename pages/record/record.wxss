.smallNotebook-title-box {
  margin: 10rpx 30rpx;
  border-bottom: 2rpx solid #e7e7e7;
  padding-bottom: 30rpx;
}

.smallNotebook-title-input {
  font-size: 30rpx;
}

.smallNotebook-content-box {
  margin: 30rpx 30rpx;
}

.smallNotebook-content-input {
  width: 100%;
  height: 800rpx;
  font-size: 30rpx;
}

.smallNotebook-record-box {
  z-index: 2;
  display: flex;
  justify-content: center;
}

.smallNotebook-record-btn {
  position: fixed;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  bottom: 50rpx;
  height: 150rpx !important;
  width: 250rpx !important;
  border-radius: 60rpx !important;
  border-top: 0 !important;
  border-left: 3rpx solid #dcdcdc !important;
  border-right: 3rpx solid #dcdcdc !important;
  border-bottom: 5rpx solid #d3d3d3 !important;
  background-color: transparent !important;
  color: #ff8c00;
}