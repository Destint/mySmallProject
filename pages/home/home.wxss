.page-home {
  min-height: 100vh;
  background-color: #fff;
}

.smallNotebook-box {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin: 0rpx 30rpx;
  height: 130rpx;
  border-bottom: 3rpx solid #f5f5f5;
}

.smallNotebook-title {
  font-size: 28rpx;
  margin: 0 30rpx;
}

.smallNotebook-time {
  font-size: 24rpx;
  color: #696969;
  margin: 0 30rpx;
}

.smallNotebook-address {
  font-size: 24rpx;
  color: #696969;
  margin: 0 30rpx;
}

.record-box {
  z-index: 2;
  display: flex;
  justify-content: center;
}

.record-bg {
  position: fixed;
  display: flex;
  flex-direction: column;
  align-items: center;
  bottom: 100rpx;
  height: 150rpx;
  width: 250rpx;
  border-radius: 60rpx;
  border-top: 0;
  border-left: 3rpx solid #dcdcdc;
  border-right: 3rpx solid #dcdcdc;
  border-bottom: 5rpx solid #d3d3d3;
}

.record-flag {
  margin-top: 10rpx;
  width: 81rpx;
  height: 81rpx;
}

.record-tip {
  font-size: 24rpx;
  font-weight: 600;
  color: #ff8c00;
}