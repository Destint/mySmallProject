.record-box {
  z-index: 2;
  display: flex;
  justify-content: center;
}

.record-bg {
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  bottom: 50rpx;
  height: 150rpx;
  width: 250rpx;
  border-radius: 60rpx;
  border-top: 0;
  border-left: 3rpx solid #dcdcdc;
  border-right: 3rpx solid #dcdcdc;
  border-bottom: 5rpx solid #d3d3d3;
}

.record-flag {
  margin-top: 10rpx;
  width: 81rpx;
  height: 81rpx;
}

.record-tip {
  font-size: 24rpx;
}